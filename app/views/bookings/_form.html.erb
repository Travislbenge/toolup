

<%= simple_form_for [@tool, @booking], defaults: { input_html: { class: 'form-control form-inline' } } do |f| %>

 <%= f.text_field :start_date, class: "datepicker form-inline", placeholder: "Start date" %>
 <%= f.text_field :end_date, class: "datepicker form-inline", placeholder: "End date" %>
<br><br>
  <%= f.submit 'Book tool', class: 'btn btn-primary' %>
<% end %>




<%= content_for :js do %>
  <%= javascript_tag do %>
    $(document).ready(function(){
      $('.datepicker').datepicker();
    });
  <% end %>
<% end %>
