<div class="container">
  <div class="row">
  <h1>All your bookings</h1>
  <% @bookings.each do |booking| %>
    <div class="col-xs-12 col-sm-12">
      <h2>link_to booking.tool.name, booking_path(booking)</h2>
        <%= render 'card', booking: booking %>
    </div>
  <% end %>
  </div>
</div>


<h1>All our restaurants</h1>
<% @restaurants.each do |restaurant| %>
  <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
  <p><%= restaurant.address %></p>
  <p><%= "*" * restaurant.rating %></p>
  <%= link_to "Remove restaurant", restaurant_path(restaurant), method: :delete %>
<% end %>
<p><%= link_to "Add restaurant", new_restaurant_path %></p>
