<div class="container">
  <div class="tools-container">
   <div class="row">
    <div class="col-sm-6 col-offset-6">
      <div class="">
        <%= cl_image_tag @tool.photo, height: 300, crop: :fill %>
      </div>
      <div class="description">
        <h3>Name:<%= @tool.name %></h3>
        <p>Description:<br><%= @tool.description %></p>
        <p>Price per day:<br><%= @tool.price %></p>
        <p>Location:<br><%= @tool.address %></p>

        <% if @tool.owner == current_user %>
        <%= link_to 'Edit', edit_tool_path, class: 'btn btn-warning' %></p>
        <% else %>
        <%= link_to 'Book me', new_tool_booking_path(@tool), class: 'btn btn-success' %>
        <% end %>
        <%= link_to 'More tools', tools_path, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>"></div>
</div>
</div>
