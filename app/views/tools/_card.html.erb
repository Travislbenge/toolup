
<div class="card-tool-container">
  <div class="card-tool">
    <div class="card-tool-image" style="background-image: url(<%= cl_image_path(tool.photo) %>)">
      <img class="card-tool-image-user" src=<%= tool.owner.facebook_picture_url %>>
    </div>
  <div class="card-text">
    <div class="card-category"><%= tool.category %></div>
      <div class="card-description">
        <h2 class="card-name"><%= link_to tool.name, tool_path(tool) %></h2>
        <p class="card-address"><%= tool.address %></p>
        <h3 class="review-count"><%= tool.reviews.count %> reviews</h3>
      </div>
    </div>
  </div>
</div>


