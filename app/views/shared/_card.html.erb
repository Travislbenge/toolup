 <div class="container">
  <div class="row">
    <% @tools.each do |tool| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path(tool.photo) %>);">
       <div class="card-category"><%= tool.category %></div>
       <div class="card-description">
        <h2><%= tool.description %></h2>
      </div>
      <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
    </div>
  </div>
  <% end %>
</div>
</div>
</div>
